{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for XDebug on Docker",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html" : "${workspaceFolder}/skeletons/wordpress",
        "/var/www/html/wp-content/themes/" : "${workspaceFolder}/themes/",
        "/var/www/html/wp-content/plugins" : "${workspaceFolder}/plugins",
        "/var/www/html/wp-content/mu-plugins" : "${workspaceFolder}/mu-plugins"
      }
    },
  ]
}